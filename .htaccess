RewriteEngine On

# Clean URL rewrite rule
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9\-]+)/?$ blog-single.html?slug=$1 [L,QSA]

# Redirect old URLs to new clean URLs (optional but recommended for SEO)
RewriteCond %{QUERY_STRING} ^slug=([^&]+)$
RewriteRule ^blog-single\.html$ /%1? [R=301,L]

# Handle category pages with clean URLs too
RewriteRule ^category/([a-zA-Z0-9\-]+)/?$ category.html?category=$1 [L,QSA]
RewriteRule ^category/([a-zA-Z0-9\-]+)/([a-zA-Z0-9\-]+)/?$ category.html?category=$1&subcategory=$2 [L,QSA]

# Prevent direct access to blog-single.html (optional)
RewriteCond %{THE_REQUEST} \s/blog-single\.html[\s?] [NC]
RewriteRule ^blog-single\.html$ / [R=301,L]